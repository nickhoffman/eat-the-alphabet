= form_for @animal do |f|
  - if @animal.errors.any?
    #error_explanation
      %h2
        = pluralize(@animal.errors.count, "error")
        prohibited this animal from being saved:
      %ul
        - @animal.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    %br/
    = f.text_field :name

  .field
    = f.label :types
    %br/
    - Animal.valid_types.each do |type|
      = check_box_tag 'animal[types][]', type, @animal.types.include?(type)
      = type
      %br

  .actions
    = f.submit

